@model UpdateCurrencyViewModel

<div class="col-6 m-auto">
    <form asp-controller="Currency" asp-action="EditCurrency" method="post">
        <input type="hidden" asp-for="@Model.CurrencyId" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3 p-2">
            <label asp-for="@Model.CurrencyName">Название</label>
            <span class="text-danger" asp-validation-for="@Model.CurrencyName"></span>
            <input asp-for="@Model.CurrencyName" class="form-control" />
        </div>
        <div class="form-group mb-3 p-2">
            <label asp-for="@Model.Code">Код</label>
            <span class="text-danger" asp-validation-for="@Model.Code"></span>
            <input asp-for="@Model.Code" class="form-control" />
        </div>
        <div class="form-group mb-3 p-2">
            <label asp-for="@Model.Rate">Курс</label>
            <span class="text-danger" asp-validation-for="@Model.Rate"></span>
            <input asp-for="@Model.Rate" value="@Model.Rate.ToString(System.Globalization.CultureInfo.InvariantCulture)" class="form-control" />
        </div>
        <input type="submit" value="Применить" class="btn btn-primary col-12" />
    </form>
</div>