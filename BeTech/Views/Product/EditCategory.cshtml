@model UpdateProductCategoryViewModel
    <div class="col-6 m-auto">
        <form asp-controller="Product" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="@Model.CategoryId" />
            <div class="form-group mb-3 p-2">
                <label asp-for="@Model.CategoryName">Название</label>
                <span class="text-danger" asp-validation-for="@Model.CategoryName"></span>
                <input asp-for="@Model.CategoryName" class="form-control" />
            </div>
            <input type="submit" value="Применить" class="btn btn-primary col-12" />
        </form>
    </div>